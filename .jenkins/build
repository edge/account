def buildAndPushImage(registryCredential, repository, buildArgs) {
  docker.withRegistry("https://registry.edge.network", registryCredential) {
    def image = docker.build("registry.edge.network/$repository", "$buildArgs .")
    image.push()
  }
}

pipeline {
  agent {
    label 'local'
  }
  stages {
    stage('Build') {
      steps {
        script {
          buildAndPushImage(REGISTRY_CREDENTIAL, NAME, "--build-arg ACCOUNT_API_URL=$ACCOUNT_API_URL EXPLORER_URL=$EXPLORER_URL INDEX_API_URL=$INDEX_API_URL")
        }
      }
    }
  }
}
